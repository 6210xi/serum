{{!< default}}

<main class="content" role="main">

    <ol class="posts">
        {{#foreach posts}}
        <li>
            <h2 class="posts-title">
            <a href="{{url}}" title="{{{title}}}">{{{title}}}</a>
            </h2>
            <p class="excerpt">
                {{excerpt}}&hellip;
            </p>
            <div class="post-meta"><time class="post-meta-date date" datetime="{{date format="DD MMM YYY"}}">{{date format="DD MMM YYYY"}}</time> &#8226; <span class="post-meta-tags tags">{{tags prefix="on "}}</span>
            </div>
            <hr class = "divider"/>
        </li>
        {{/foreach}}
    </ol>
    
    {{pagination}}
</main>